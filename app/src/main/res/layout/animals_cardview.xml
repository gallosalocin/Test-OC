<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

        <ImageView
            android:id="@+id/animals_cardview_imageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:paddingVertical="4dp"
            android:src="@drawable/zebra_icon" />

        <TextView
            android:id="@+id/animals_cardview_nom_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nom animal"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_toRightOf="@+id/animals_cardview_imageView"/>

        <ImageView
            android:id="@+id/animals_cardview_delete_btn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/delete_icon"
            android:layout_alignParentEnd="true"
            android:layout_margin="5dp"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>


